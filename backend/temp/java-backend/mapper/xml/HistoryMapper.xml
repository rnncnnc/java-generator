<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace 需要映射的接口的全类名 -->
<mapper namespace="com.qinge.backend.mapper.HistoryMapper">
	<sql id="History">
		id,
		fiction_id,
		fiction_name,
		type_id,
		chapter_id,
		page,
		page_size,
		create_time,
	</sql>

	<!-- 	批量查询数据	 -->
	<select id="select" resultType="com.qinge.backend.entity.pojo.HistoryPojo">
		select
		<trim suffixOverrides=",">
			<include refid="History">
			</include>
		</trim>
		from history
		<if test="pojo != null">
			<where>
				<if test="pojo.id != null">
					and id = #{pojo.id}
				</if>
			</where>
		</if>
		<if test="page != null">
			limit #{page.pageSize} offset #{page.pageNum}
		</if>
		<if test="sort != null">
			order by #{sort.index} #{sort.order}
		</if>
	</select>

	<!-- 	插入数据	 -->
	<insert id="insert" parameterType="com.qinge.backend.entity.pojo.HistoryPojo">
		insert into history
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="pojo.id != null">
				id,
			</if>
			<if test="pojo.fiction_id != null">
				fiction_id,
			</if>
			<if test="pojo.fiction_name != null">
				fiction_name,
			</if>
			<if test="pojo.type_id != null">
				type_id,
			</if>
			<if test="pojo.chapter_id != null">
				chapter_id,
			</if>
			<if test="pojo.page != null">
				page,
			</if>
			<if test="pojo.page_size != null">
				page_size,
			</if>
			<if test="pojo.create_time != null">
				create_time,
			</if>
		</trim>
		values
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="pojo.id != null">
				#{pojo.id},
			</if>
			<if test="pojo.fiction_id != null">
				#{pojo.fiction_id},
			</if>
			<if test="pojo.fiction_name != null">
				#{pojo.fiction_name},
			</if>
			<if test="pojo.type_id != null">
				#{pojo.type_id},
			</if>
			<if test="pojo.chapter_id != null">
				#{pojo.chapter_id},
			</if>
			<if test="pojo.page != null">
				#{pojo.page},
			</if>
			<if test="pojo.page_size != null">
				#{pojo.page_size},
			</if>
			<if test="pojo.create_time != null">
				#{pojo.create_time},
			</if>
		</trim>
	</insert>

	<!-- 	更新数据	 -->
	<update id="update" parameterType="com.qinge.backend.entity.pojo.HistoryPojo">
		update history
		<set>
			<if test="np.id != null">
				id = #{np.id},
			</if>
			<if test="np.fiction_id != null">
				fiction_id = #{np.fiction_id},
			</if>
			<if test="np.fiction_name != null">
				fiction_name = #{np.fiction_name},
			</if>
			<if test="np.type_id != null">
				type_id = #{np.type_id},
			</if>
			<if test="np.chapter_id != null">
				chapter_id = #{np.chapter_id},
			</if>
			<if test="np.page != null">
				page = #{np.page},
			</if>
			<if test="np.page_size != null">
				page_size = #{np.page_size},
			</if>
			<if test="np.create_time != null">
				create_time = #{np.create_time},
			</if>
		</set>
		<where>
			<if test="query.pojo.id != null">
				and id = #{query.pojo.id}
			</if>
		</where>
	</update>

	<!-- 	删除数据	 -->
	<delete id="delete" parameterType="com.qinge.backend.entity.pojo.HistoryPojo">
		delete from history
		<where>
			<if test="pojo.id != null">
				and id = #{pojo.id}
			</if>
		</where>
	</delete>
</mapper>
