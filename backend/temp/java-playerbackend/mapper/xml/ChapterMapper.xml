<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace 需要映射的接口的全类名 -->
<mapper namespace="com.qinge.playerbackend.mapper.ChapterMapper">
	<sql id="Chapter">
		id,
		fiction_id,
		type_id,
		title,
		url,
	</sql>

	<!-- 	批量查询数据	 -->
	<select id="select" resultType="com.qinge.playerbackend.entity.pojo.ChapterPojo">
		select
		<trim suffixOverrides=",">
			<include refid="Chapter">
			</include>
		</trim>
		from chapter
		<if test="pojo != null">
			<where>
				<if test="pojo.title != null">
					and title = #{pojo.title}
				</if>
				<if test="pojo.id != null">
					and id = #{pojo.id}
				</if>
			</where>
		</if>
		<if test="page != null">
			limit #{page.pageSize} offset #{page.pageNum}
		</if>
		<if test="sort != null">
			order by #{sort.index} #{sort.order}
		</if>
	</select>

	<!-- 	插入数据	 -->
	<insert id="insert" parameterType="com.qinge.playerbackend.entity.pojo.ChapterPojo">
		insert into chapter
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="pojo.id != null">
				id,
			</if>
			<if test="pojo.fictionId != null">
				fiction_id,
			</if>
			<if test="pojo.typeId != null">
				type_id,
			</if>
			<if test="pojo.title != null">
				title,
			</if>
			<if test="pojo.url != null">
				url,
			</if>
		</trim>
		values
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="pojo.id != null">
				#{pojo.id},
			</if>
			<if test="pojo.fictionId != null">
				#{pojo.fictionId},
			</if>
			<if test="pojo.typeId != null">
				#{pojo.typeId},
			</if>
			<if test="pojo.title != null">
				#{pojo.title},
			</if>
			<if test="pojo.url != null">
				#{pojo.url},
			</if>
		</trim>
	</insert>

	<!-- 	更新数据	 -->
	<update id="update" parameterType="com.qinge.playerbackend.entity.pojo.ChapterPojo">
		update chapter
		<set>
			<if test="np.id != null">
				id = #{np.id},
			</if>
			<if test="np.fictionId != null">
				fiction_id = #{np.fictionId},
			</if>
			<if test="np.typeId != null">
				type_id = #{np.typeId},
			</if>
			<if test="np.title != null">
				title = #{np.title},
			</if>
			<if test="np.url != null">
				url = #{np.url},
			</if>
		</set>
		<where>
			<if test="query.pojo.title != null">
				and title = #{query.pojo.title}
			</if>
			<if test="query.pojo.id != null">
				and id = #{query.pojo.id}
			</if>
		</where>
	</update>

	<!-- 	删除数据	 -->
	<delete id="delete" parameterType="com.qinge.playerbackend.entity.pojo.ChapterPojo">
		delete from chapter
		<where>
			<if test="pojo.title != null">
				and title = #{pojo.title}
			</if>
			<if test="pojo.id != null">
				and id = #{pojo.id}
			</if>
		</where>
	</delete>
</mapper>
